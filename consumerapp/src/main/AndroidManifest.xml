<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adhityabagasmiwa.consumerapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="com.adhityabagasmiwa.dicodingsubmissionbfaa.READ_DATABASE" />
    <uses-permission android:name="com.adhityabagasmiwa.dicodingsubmissionbfaa.WRITE_DATABASE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DicodingSubmissionBFAA">
        <activity android:name=".ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.DetailActivity" />
        <activity android:name=".ui.activities.SettingPreferenceActivity" />

        <receiver
            android:name=".utils.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>