<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adhityabagasmiwa.dicodingsubmissionbfaa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.adhityabagasmiwa.dicodingsubmissionbfaa.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.adhityabagasmiwa.dicodingsubmissionbfaa.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_github"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_github"
        android:supportsRtl="true"
        android:theme="@style/Theme.SubmissionDicodingBFAA">
        <provider
            android:name=".data.provider.UserProvider"
            android:authorities="com.adhityabagasmiwa.dicodingsubmissionbfaa"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.adhityabagasmiwa.dicodingsubmissionbfaa.READ_DATABASE"
            android:writePermission="com.adhityabagasmiwa.dicodingsubmissionbfaa.WRITE_DATABASE"></provider>

        <activity android:name=".ui.activities.FavoriteActivity" />
        <activity android:name=".ui.activities.MainActivity" />
        <activity android:name=".ui.activities.DetailActivity" />
        <activity android:name=".ui.activities.SettingPreferenceActivity" />
        <activity
            android:name=".ui.activities.SplashScreenActivity"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".utils.widget.StackWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/stack_widget_info" />
        </receiver>
        <receiver
            android:name=".utils.reminder.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".utils.widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>